<div id="RegisterUser" style="margin-left: 50px">
    <div class="modal-header">
        <button onclick="$dismiss('cancel')" type="button" class="close">&times;</button>
        <h4 class="modal-title">Send Email</h4>
    </div>
    <div class="modal-body">
        <p>Users Email:</p>
    </div>
    <div>
        <h1>Mailer In Node.JS</h1>
        <p id="to"></p>
        <input id="subject" type="text" placeholder="Write Subject" />
        <textarea id="content" cols="40" rows="5" placeholder="Write what you want to send"></textarea>
        <button id="send_email">Send Email</button>
        <span id="message"></span>
    </div>
    <div class="modal-footer">
        <button onclick="$dismiss('cancel')" type="button" class="btn btn-default">Close</button>
    </div>
</div>
