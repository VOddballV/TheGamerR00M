<!DOCTYPE html>
<html ng-app="newSite">
<head>
    @*<base href="http://gamerr00m.org/#!/" />*@
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>The Gamer R00M</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/loaders.min.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.4/angular.min.js"></script>
    <script src="~/Scripts/angular-ui-router.min.js"></script>
    <script src="~/Scripts/angular-animate.min.js"></script>
    <script src="~/Scripts/ui-bootstrap-tpls-0.13.3.min.js"></script>
    <script src="~/Scripts/ng-infinite-scroll.min.js"></script>
    <script src="~/Scripts/smoothscroll.js"></script>
    <script src="~/Scripts/app.js"></script>
</head>
<body>

    <div id="loader-wrapper">
        <div id="loader">
            <div id="loaderpac" class="loader-inner pacman">
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
            </div>
        </div>

        <div class="loader-section section-left"></div>
        <div class="loader-section section-right"></div>

    </div>
    <div id="content">
        <div class="navbar navbar-inverse navbar-fixed-top nav-bar-border">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <button id="brandTitle" ui-sref="Home" class="LinkButt navbar-brand">The Gamer R00M</button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul id="SubMenu" class="nav navbar-nav">
                        <li id="Home" ui-sref="Home" class="LinkButt" hidden="hidden"></li>
                        <li id="Reviews" ui-sref="Reviews" class="LinkButt">@Html.ActionLink("Reviews", "", "", "", null)</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container body-content">
            <div id="MainContent" ui-view>
                <br />
                @RenderBody()
            </div>
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        var blnHasLoaded = false
        if (window.onload = true && blnHasLoaded == false) {
            window.location.hash = "#!/"
            blnHasLoaded = true
            //location.reload();
        }
        if ( $(window).width() > 739) {
            //Add your javascript for large screens here
        }
        else {
            //  If user clicks on navbar in mobile close navbar
            $('.nav a').on('click', function () {
                $('.navbar-toggle').click()
            });
            var home = document.getElementById('#Home');
        }
        // Preload animation run
        $(window).load(function () {
            setTimeout( 5000, function () {
                // Animate loader off screen
                $('body').addClass('loaded');
            });
        });
    </script>
</body>
</html>
