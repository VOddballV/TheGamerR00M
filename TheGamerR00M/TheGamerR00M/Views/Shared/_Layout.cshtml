<!DOCTYPE html>
<html>
<head>
    @*<base href="http://gamerr00m.org/#!/" />*@
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>The Gamer R00M</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/loaders.min.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="~/Scripts/smoothscroll.js"></script>
</head>
<body>
    <div id="loader-wrapper">
        <div id="loader">
            <div id="loaderpac" class="loader-inner pacman">
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
            </div>
        </div>

        <div class="loader-section section-left"></div>
        <div class="loader-section section-right"></div>

    </div>
    <div id="content">
        <div class="navbar navbar-inverse navbar-fixed-top nav-bar-border">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("The Gamer R00M", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul id="SubMenu" class="nav navbar-nav">
                        <li id="Home" onclick="closeSub();" hidden="hidden">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                        <li id="Reviews" onclick="closeSub();" >@Html.ActionLink("Reviews", "Index", "Reviews", new { area = "" }, null)</li>                        
                    </ul>
                </div>
            </div>
        </div>
        <div class="container body-content">
            <div id="MainContent">
                <br />
                @RenderBody()
            </div>
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - The Gamer R00M</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @* Run initial javascript for layout *@
    <script src="~/Scripts/Initial.js"></script>
</body>
</html>
