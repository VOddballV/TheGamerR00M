@model  TheGamerR00M.Models.UserModel
@{
    ViewBag.Title = "New Post";
}

<h2>Create New Post</h2>
<div class="basic-Form">
    <div style="margin-left: 10px; margin-right: 10px">
        <div id="newPost">
            @using (Html.BeginForm("SavePost", "Posts", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
            @Html.HiddenFor(x => x.UserID)
            @* Dropdown *@
            <div class="form-group">
                <div class="selectContainer" style="width: 350px">
                    <select class="form-control" name="PostType" required="">
                        <option value="">Choose Type of post...</option>
                        <option value="Stories">Story</option>
                        <option value="Reviews">Review</option>
                    </select>
                </div>
            </div>
            @* End of dropdown *@
            <br />
            <input type="text" class="form-control input-lg" name="PostTitle" id="posttitle" placeholder="Title..." required="" style="width: 350px">
            <br />
            @* Browse for image *@
            <div id="userpic"></div>
            <div class="container" style="margin-top: 20px;">
                <div class="row">
                    <div class="input-group">
                        <span class="input-group-btn">
                            <span class="btn btn-file block full-width m-b">
                                Browse&hellip; <input type="file" accept="image/x-png, image/jpeg, image/png" name="file" id="file" style="width: 350px">
                            </span>
                        </span>
                        <input type="text" class="form-control" readonly placeholder="Add Image">
                    </div>
                </div>
            </div>
            @* End of browse for image *@
            <br/>
            <div class="form-group">
                <textarea class="form-control" rows="10" id="postBody" name="PostBody" placeholder="Body..." required="" style="resize: vertical"></textarea>
            </div>
            <button type="submit" class="btn block full-width m-b">Submit</button>
            }
        </div>
    </div>
</div>

<script src="~/Scripts/NewPost.js"></script>