
@{
    ViewBag.Title = "Log In";
}

<h2>Login Page</h2>
<div id="loginForm">
    @if (TempData.ContainsKey("errorInvalid"))
    {
        <div class="alert alert-danger text-center" style="margin-top: 15px;">
            @TempData["errorInvalid"]
        </div>
    }
    <div style="margin-left: 30px; margin-right: 30px">
        <div id="userLogin" class="col-sm-6">
            <div id="UserPass">
                <br />
                <h3>Login</h3>
                @using (Html.BeginForm()) { 
                    
                <span>User Name:</span>
                <input type="text" class="form-control" name="UserName" autocomplete="off" id="username" placeholder="User Name" required="">
                <span>Password:</span>
                <input type="password" class="form-control" name="Password" autocomplete="off" id="password" placeholder="Password" required="">
                <button type="submit" class="btn block full-width m-b">Login</button>
                    
                }
            </div>
        </div>
        <div id="userReg" class="col-sm-6">
            <div id="Reg">
                <br />
                <h3>Register</h3>
            </div>
        </div>
    </div>
</div>

